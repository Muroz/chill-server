{
    "compilerOptions": {
      "rootDirs": ["src"],
      "outDir": "dist",
      "lib": ["ESNext"],
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true, 
      "types": ["node"],
      "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]  
  }